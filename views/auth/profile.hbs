<div class="container">
 
  {{#if this}}
  <h4>Welcome {{username}}!!!</h4>
  {{/if}}

  <form action='/auth/profile' method="POST" id="form-container">
    <div class="form-group">
      <label class="col-lg-3 col-form-label form-control-label" for="username">Username :</label>
      <div class="col-lg-9">
      <input class="form-control" id="username" type="text" name="username" placeholder="Username" value="{{username}}">
    </div>
  </div>
    <div class="form-group">
      <label class="col-lg-3 col-form-label form-control-label" for="Email">Email: </label>
      <div class="col-lg-9">
      <input class="form-control" id="Email" type="email" name="email" placeholder="example@email.com" value="{{email}}">
    </div>
    </div>
    <div class="form-group">
      <label class="col-lg-3 col-form-label form-control-label"for="password">Password: </label>
      <div class="col-lg-9">
      <input class="form-control" id="password" type="password" name="password" placeholder="Your password" required>
    </div>
    </div>
    <div class="form-group">
    <label class="col-lg-3 col-form-label form-control-label" for="Bio">Bio :</label>
    <div class="col-lg-9">
    <textarea class="form-control" name="bio" rows="2" cols="50">"{{bio}}"</textarea>
  </div>
  </div>
  <button class="btn btn-success" type="submit">Update changes</button>
  <br><br>

  </form>
  <a class="btn btn-warning"href="/events/new-event" type="button">Create an event</a>
</div>

