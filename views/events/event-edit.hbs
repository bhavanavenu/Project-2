<div class="container">

<h2>Edit Event : {{name}}</h2>
<form action="/events/{{this._id}}" method="POST">

  <div class="form-group">
  <label class="col-lg-3 col-form-label form-control-label" for="Event Name">Event Name :</label>
  <div class="col-lg-9">
  <input class="form-control" id ="Event Name" type="text" name="name" placeholder="add a short,clear name" value="{{name}}">
  </div>
  </div>
  
  <div class="form-group">
  <label class="col-lg-3 col-form-label form-control-label" for="Location">Location :</label>
  <div class="col-lg-9">
  <input class="form-control" id="Location" type="text" name="location" placeholder="include an address" value="{{location}}">
  </div>
  </div>

 
  <div class="form-group">
  <label class="col-lg-3 col-form-label form-control-label"for="Date">Date :</label>
  <div class="col-lg-9">
  <input class="form-control" id="Date" type="date" name="date" placeholder="" value="{{date}}">
  </div>
  </div>

 
<div class="form-group">
  <label class="col-lg-3 col-form-label form-control-label" for="Time">Time :</label>
   <div class="col-lg-9">
  <input class="form-control" id="Time" type="time" name="time" placeholder="" value="{{time}}">
   </div>
   </div>

<div class="form-group">
 <label class="col-lg-3 col-form-label form-control-label" for="Description">Description :</label>
 <div class="col-lg-9">
 <textarea class="form-control" rows="2" cols="50" name="description" value="{{description}}">
</textarea>
</div>
</div>
